import streamlit as st

st.set_page_config(page_title="To-Do App", page_icon="üìù", layout="centered")

# ---- Custom CSS ----
st.markdown("""
<style>
body {
    font-family: 'Segoe UI', sans-serif;
}

.container {
    background: #ffffffcc;
    padding: 25px;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    width: 380px;
    margin: auto;
}

h1 {
    text-align: center;
    color: #2c3e50;
    font-weight: bold;
    margin-bottom: 25px;
}

.task {
    background: #e8f0ff;
    padding: 12px;
    border-radius: 10px;
    margin-bottom: 10px;
}

.add-btn {
    background: #007bff;
    color: white;
    padding: 10px 18px;
    border-radius: 8px;
    border: none;
}
</style>
""", unsafe_allow_html=True)

# ---- App Layout ----
st.markdown("<div class='container'>", unsafe_allow_html=True)

st.markdown("## üìù To-Do List")

# Session state initialized
if "tasks" not in st.session_state:
    st.session_state.tasks = []

# Add task
new_task = st.text_input("‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏á‡∏≤‡∏ô‡πÉ‡∏´‡∏°‡πà:")
if st.button("‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏á‡∏≤‡∏ô"):
    if new_task.strip() != "":
        st.session_state.tasks.append({"text": new_task, "done": False})
        st.experimental_rerun()

# Show tasks
for i, task in enumerate(st.session_state.tasks):
    col1, col2 = st.columns([0.1, 0.9])
    with col1:
        done = st.checkbox("", value=task["done"], key=f"task_{i}")
        st.session_state.tasks[i]["done"] = done
    with col2:
        text = f"‚úîÔ∏è ~~{task['text']}~~" if task["done"] else task["text"]
        st.markdown(f"<div class='task'>{text}</div>", unsafe_allow_html=True)

# Clear completed
if st.button("‡∏•‡∏ö‡∏á‡∏≤‡∏ô‡∏ó‡∏µ‡πà‡∏ó‡∏≥‡πÄ‡∏™‡∏£‡πá‡∏à‡πÅ‡∏•‡πâ‡∏ß"):
    st.session_state.tasks = [t for t in st.session_state.tasks if not t["done"]]
    st.experimental_rerun()

st.markdown("</div>", unsafe_allow_html=True)
